<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageRecyvlerViewInCart"
            app:civ_border_width="3dp"
            android:layout_centerVertical="true"
            app:civ_border_color="@color/colorGrayDark"
            android:layout_marginBottom="22dp"
            android:layout_marginStart="26dp"
            android:src="@drawable/ic_delete_white_24dp"
            app:civ_circle_background_color="@color/colorGrayDark"
            android:layout_width="36dp"
            android:layout_height="36dp" />

        <TextView
            android:id="@+id/textViewDetailInCart"
            android:layout_width="336dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_toRightOf="@+id/imageRecyvlerViewInCart"
            android:fontFamily="@font/montserrat"
            android:text="Get started with detailed pp..."
            android:textColor="@color/colorGrayDark585858"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imgTimeInCart"
            android:layout_below="@+id/textViewDetailInCart"
            android:layout_toRightOf="@+id/imageRecyvlerViewInCart"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_access_time_black_24dp"
            android:layout_marginTop="8dp"
            android:layout_width="18dp"
            android:layout_height="22dp" />

        <TextView
            android:id="@+id/textViewTimeInCart"
            android:text="20 (minutes)"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/imgTimeInCart"
            android:layout_below="@id/textViewDetailInCart"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imgPersonInCart"
            android:layout_marginLeft="16dp"
            android:layout_below="@id/textViewDetailInCart"
            android:layout_toRightOf="@id/textViewTimeInCart"
            android:src="@drawable/ic_group_black_24dp"
            android:layout_marginTop="8dp"
            android:layout_width="18dp"
            android:layout_height="22dp" />

        <TextView
            android:id="@+id/textViewPersonInCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/textViewDetailInCart"
            android:layout_toRightOf="@+id/imgPersonInCart"
            android:fontFamily="@font/montserrat"
            android:text="4 (person)"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewMoneyInCart"
            android:text="312.00 usd"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorRedFresh"
            android:fontFamily="@font/montserrat"
            android:layout_below="@id/imgTimeInCart"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imageRecyvlerViewInCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <Button
            android:id="@+id/buttonAddInCart"
            android:text="+"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="26dp"
            android:background="@drawable/custom_button_radius_circle_red_dark"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <TextView
            android:id="@+id/textViewAmoutInCart"
            android:text="3"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:inputType="number"
            android:layout_toLeftOf="@+id/buttonAddInCart"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonReductionInCart"
            android:paddingTop="12dp"
            android:drawableTop="@drawable/ic_remove_white_24dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/textViewAmoutInCart"
            android:layout_centerVertical="true"
            android:background="@drawable/custom_button_radius_circle_red_dark"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

    </RelativeLayout>
    
</LinearLayout>