<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layoutClickRecylerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageFood"
            android:layout_width="105dp"
            android:layout_height="70dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="26dp"/>

        <TextView
            android:id="@+id/textViewDetailed"
            android:layout_width="350dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_toRightOf="@id/imageFood"
            android:fontFamily="@font/montserrat"
            android:text="Get started with detailed pp..."
            android:textColor="@color/colorGrayDark585858"
            android:textSize="18sp" />

        <ImageView
            android:layout_below="@id/textViewDetailed"
            android:layout_toRightOf="@id/imageFood"
            android:id="@+id/imgTime"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_access_time_black_24dp"
            android:layout_marginTop="8dp"
            android:layout_width="18dp"
            android:layout_height="22dp" />

        <TextView
            android:id="@+id/textViewTimeChoose"
            android:text="20 (minutes)"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat"
            android:layout_toRightOf="@+id/imgTime"
            android:layout_below="@id/textViewDetailed"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_below="@id/textViewDetailed"
            android:layout_toRightOf="@id/textViewTimeChoose"
            android:id="@+id/imgPerson"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_group_black_24dp"
            android:layout_marginTop="8dp"
            android:layout_width="18dp"
            android:layout_height="22dp" />

        <TextView
            android:id="@+id/textViewPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewDetailed"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/imgPerson"
            android:fontFamily="@font/montserrat"
            android:text="4 (person)"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewMoney"
            android:text="312.00 usd"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorRedFresh"
            android:fontFamily="@font/montserrat"
            android:layout_below="@id/imgTime"
            android:layout_toRightOf="@id/imageFood"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>

        <Button
            android:id="@+id/buttonAdtoCart"
            android:layout_width="165dp"
            android:layout_height="40dp"
            android:fontFamily="@font/montserrat"
            android:textAllCaps="false"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="26dp"
            android:background="@drawable/custom_button_background_reddark"
            android:text="+ Add to Cart"
            android:textColor="@color/colorWhite"
            android:textSize="19sp"
            android:textStyle="bold" />
    </RelativeLayout>
    
</LinearLayout>